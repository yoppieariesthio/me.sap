<mvc:View
    controllerName="yoppieApp.controller.Profile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    displayBlock="true">


    <Page showHeader="false">
        <content>
            <uxap:ObjectPageLayout id="objectPageLayout">

                <!-- Object Page Header -->
                <uxap:headerTitle>
                    <uxap:ObjectPageDynamicHeaderTitle>
                        <uxap:expandedHeading>
                            <Title text="{profile>/employee/firstName} {profile>/employee/lastName}"
                                level="H1"
                                class="sapUiMediumMarginBottom" />
                        </uxap:expandedHeading>

                        <uxap:snappedHeading>
                            <FlexBox alignItems="Center">
                                <Avatar src="{profile>/employee/profilePicture}"
                                    displaySize="S"
                                    class="sapUiTinyMarginEnd" />
                                <Title
                                    text="{profile>/employee/firstName} {profile>/employee/lastName}"
                                    level="H2" />
                            </FlexBox>
                        </uxap:snappedHeading>

                        <uxap:expandedContent>
                            <Text text="{profile>/employee/title}"
                                class="sapUiMediumMarginBottom" />
                            <Text
                                text="{profile>/employee/department} â€¢ {profile>/employee/company}" />
                        </uxap:expandedContent>

                        <uxap:snappedContent>
                            <Text text="{profile>/employee/title}" />
                        </uxap:snappedContent>

                        <uxap:actions>
                            <Button text="Edit"
                                type="Emphasized"
                                press=".onEditPress" />
                            <Button text="Share"
                                press=".onSharePress" />
                        </uxap:actions>
                    </uxap:ObjectPageDynamicHeaderTitle>
                </uxap:headerTitle>

                <!-- Object Page Header Content -->
                <uxap:headerContent>
                    <FlexBox direction="Row"
                        wrap="Wrap"
                        class="sapUiMediumMargin">

                        <!-- Profile Picture and Status -->
                        <VBox class="sapUiLargeMarginEnd sapUiMediumMarginBottom">
                            <Avatar src="{profile>/employee/profilePicture}"
                                displaySize="XL"
                                class="sapUiMediumMarginBottom" />
                            <ObjectStatus text="{profile>/employee/status}"
                                state="{profile>/employee/statusState}" />
                        </VBox>

                        <!-- Employee Information -->
                        <VBox class="sapUiLargeMarginEnd sapUiMediumMarginBottom">
                            <Label text="Employee ID" class="sapUiTinyMarginBottom" />
                            <Text text="{profile>/employee/employeeId}"
                                class="sapUiMediumMarginBottom" />

                            <Label text="Manager" class="sapUiTinyMarginBottom" />
                            <Text text="{profile>/employee/manager}" class="sapUiMediumMarginBottom" />

                            <Label text="Experience" class="sapUiTinyMarginBottom" />
                            <Text text="{profile>/employee/experience}" />
                        </VBox>

                        <!-- Contact Information -->
                        <VBox class="sapUiLargeMarginEnd sapUiMediumMarginBottom">
                            <Label text="Contact Information" class="sapUiTinyMarginBottom" />
                            <List items="{profile>/employee/contactInfo}"
                                showSeparators="None">
                                <StandardListItem title="{profile>value}"
                                    description="{profile>type}"
                                    icon="{profile>icon}"
                                    type="Active"
                                    press=".onContactPress" />
                            </List>
                        </VBox>

                        <!-- Statistics -->
                        <VBox class="sapUiMediumMarginBottom">
                            <Label text="Statistics" class="sapUiTinyMarginBottom" />

                            <HBox class="sapUiTinyMarginBottom">
                                <NumericContent value="{profile>/employee/projects}"
                                    indicator="Up"
                                    size="S"
                                    class="sapUiTinyMarginEnd" />
                                <VBox>
                                    <Text text="Active Projects" class="sapUiTinyText" />
                                </VBox>
                            </HBox>

                            <HBox class="sapUiTinyMarginBottom">
                                <NumericContent
                                    value="{
                                            path: 'profile>/employee/startDate',
                                            formatter: '.calculateTenure'
                                        }"
                                    size="S"
                                    class="sapUiTinyMarginEnd" />
                                <VBox>
                                    <Text text="Tenure" class="sapUiTinyText" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </FlexBox>
                </uxap:headerContent>

                <!-- Object Page Sections -->
                <uxap:sections>

                    <!-- Employment Details Section -->
                    <uxap:ObjectPageSection title="Employment Details"
                        titleUppercase="false">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection>
                                <uxap:blocks>
                                    <VBox class="sapUiMediumMargin">
                                        <Panel headerText="Employment Information"
                                            class="sapUiResponsiveMargin"
                                            width="auto">
                                            <content>
                                                <form:SimpleForm editable="false"
                                                    layout="ResponsiveGridLayout"
                                                    labelSpanXL="3"
                                                    labelSpanL="3"
                                                    labelSpanM="3"
                                                    labelSpanS="12"
                                                    adjustLabelSpan="false"
                                                    emptySpanXL="4"
                                                    emptySpanL="4"
                                                    emptySpanM="4"
                                                    emptySpanS="0"
                                                    columnsXL="1"
                                                    columnsL="1"
                                                    columnsM="1"
                                                    singleContainerFullSize="false"
                                                    xmlns:form="sap.ui.layout.form">
                                                    <form:content>
                                                        <Label text="Department" />
                                                        <Text text="{profile>/employee/department}" />

                                                        <Label text="Title" />
                                                        <Text text="{profile>/employee/title}" />

                                                        <Label text="Manager" />
                                                        <Text text="{profile>/employee/manager}" />

                                                        <Label text="Start Date" />
                                                        <Text
                                                            text="{
                                                                    path: 'profile>/employee/startDate',
                                                                    formatter: '.formatDate'
                                                                }" />

                                                        <Label text="Status" />
                                                        <ObjectStatus
                                                            text="{profile>/employee/status}"
                                                            state="{profile>/employee/statusState}" />
                                                    </form:content>
                                                </form:SimpleForm>
                                            </content>
                                        </Panel>
                                    </VBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <!-- Skills Section -->
                    <uxap:ObjectPageSection title="Skills &amp; Expertise"
                        titleUppercase="false">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection>
                                <uxap:blocks>
                                    <VBox class="sapUiMediumMargin">
                                        <Panel headerText="Technical Skills"
                                            class="sapUiResponsiveMargin"
                                            width="auto">
                                            <content>
                                                <List items="{profile>/employee/skills}"
                                                    mode="None">
                                                    <StandardListItem title="{profile>name}"
                                                        description="Level: {profile>level}"
                                                        icon="sap-icon://learning-assistant" />
                                                </List>
                                            </content>
                                        </Panel>
                                    </VBox>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                </uxap:sections>
            </uxap:ObjectPageLayout>
        </content>
    </Page>

</mvc:View>