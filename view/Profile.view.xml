<mvc:View
    controllerName="yoppieApp.controller.Profile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    height="100%">
    <ObjectPageLayout id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        showEditHeaderButton="true"
        editHeaderButtonPress="handleEditBtnPress"
        headerContentPinned="true"
        upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <breadcrumbs>
                    <m:Breadcrumbs id="breadcrumbsId" currentLocationText="Object Page Example">
                        <m:Link text="Page 1 a very long link" press="handleLink1Press" />
                        <m:Link text="Page 2 long link" press="handleLink2Press" />
                    </m:Breadcrumbs>
                </breadcrumbs>

                <expandedHeading>
                    <m:HBox>
                        <m:Title text="{i18n>profileTitle}" wrapping="true" />
                        <m:ObjectMarker type="Favorite" class="sapUiTinyMarginBegin" />
                    </m:HBox>
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox fitContainer="true" alignItems="Center">
                        <!-- <m:Avatar src="./test-resources/sap/uxap/images/imageID_275314.png"
                            class="sapUiTinyMarginEnd" /> -->
                        <m:Avatar src="{i18n>imageURL}"
                            displaySize="M" class="sapUiTinyMarginEnd" />
                        
                        <m:Title text="{i18n>profileTitle}" wrapping="true" />
                    </m:FlexBox>
                </snappedHeading>

                <expandedContent>
                    <m:Text text="Senior Developer" />
                </expandedContent>

                <snappedContent>
                    <m:Text text="Senior Developer" />
                </snappedContent>

                <snappedTitleOnMobile>
                    <m:Title text="Senior Developer" />
                </snappedTitleOnMobile>

                <actions>
                    <m:OverflowToolbarButton icon="sap-icon://edit" text="edit header"
                        type="Emphasized" tooltip="edit">
                        <m:layoutData>
                            <m:OverflowToolbarLayoutData priority="NeverOverflow" />
                        </m:layoutData>
                    </m:OverflowToolbarButton>
                    <m:OverflowToolbarButton icon="sap-icon://pull-down" text="show section"
                        type="Emphasized" tooltip="pull-down" />
                    <m:OverflowToolbarButton icon="sap-icon://show" text="show state" tooltip="show" />
                    <m:Button text="Toggle Footer" press="toggleFooter" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap">
                <m:Avatar class="sapUiSmallMarginEnd"
                    src="{i18n>imageURL}" displaySize="L" />

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Link text="+123456789" />
                    <m:Link text="yoppie.aries@outlook.com" />
                </layout:VerticalLayout>

                <layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Image src="./test-resources/sap/uxap/images/linkedin.png" />
                    <m:Image src="./test-resources/sap/uxap/images/Twitter.png"
                        class="sapUiSmallMarginBegin" />
                </layout:HorizontalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Label text="Hello! I am Yoppie" />
                    <m:VBox>
                        <m:Label text="Achieved goals" />
                        <m:ProgressIndicator percentValue="80" displayValue="80%" />
                    </m:VBox>
                </layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Label text="Indonesia" />
                </layout:VerticalLayout>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection titleUppercase="false" id="goalsSection" title="2014 Goals Plan">
                <heading>
                    <m:MessageStrip
                        text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        type="Error" />
                </heading>
                <subSections>
                    <ObjectPageSubSection id="goalsSectionSS1">
                        
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection titleUppercase="false" id="personalSection" title="Personal"
                importance="Medium">
                <heading>
                    <m:MessageStrip
                        text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        type="Error" />
                </heading>
                <subSections>
                    <ObjectPageSubSection id="personalSectionSS1" title="Connect"
                        titleUppercase="false">
                        <blocks>
                            
                        </blocks>
                    </ObjectPageSubSection>

                    <ObjectPageSubSection id="personalSectionSS2" title="Payment information"
                        titleUppercase="false">
                        <blocks>
                           
                        </blocks>
                        <moreBlocks>
                           
                        </moreBlocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection titleUppercase="false" id="employmentSection" title="Employment">
                <subSections>
                    <ObjectPageSubSection id="employmentSectionSS1" title="Job information"
                        titleUppercase="false">
                        <blocks>
                           
                        </blocks>
                    </ObjectPageSubSection>

                    <ObjectPageSubSection id="employmentSectionSS2" title="Employee Details"
                        importance="Medium" titleUppercase="false">
                        <blocks>
                           
                        </blocks>
                        <moreBlocks>
                           
                        </moreBlocks>
                    </ObjectPageSubSection>

                    <ObjectPageSubSection id="employmentSectionSS3" title="Job Relationship"
                        importance="Low" titleUppercase="false">
                        <blocks>
                         
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
        <footer>
            <m:OverflowToolbar>
                <m:ToolbarSpacer />
                <m:Button type="Accept" text="Accept" />
                <m:Button type="Reject" text="Reject" />
            </m:OverflowToolbar>
        </footer>
    </ObjectPageLayout>
</mvc:View>